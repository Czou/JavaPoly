<project name="javapoly-dispatch" default="compile" basedir=".">
  <property name="sys" location="sys"/>
  <property name="sysBuild" location="sysBuild"/>

  <target name="init">
    <tstamp/>
    <mkdir dir="${sysBuild}"/>
  </target>

  <target name="compile" depends="init" description="compile the source">
    <javac srcdir="${sys}" destdir="${sysBuild}" includeantruntime="false"/>
    <copy file="${sys}/libListings.json" tofile="${sysBuild}/libListings.json"/>
  </target>

  <target name="clean" description="clean up">
    <delete dir="${sysBuild}"/>
  </target>
</project>
